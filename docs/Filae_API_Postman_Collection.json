						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/queues/{{queueId}}/cancel",
							"host": ["{{baseUrl}}"],
							"path": ["queues", "{{queueId}}", "cancel"]
						},
						"description": "Cancel your queue entry"
					},
					"response": []
				},
				{
					"name": "Call Next Customer",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    console.log(\"✓ Called next customer: \" + jsonData.ticketNumber);",
									"}"
								]
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/queues/establishment/{{establishmentId}}/call-next",
							"host": ["{{baseUrl}}"],
							"path": ["queues", "establishment", "{{establishmentId}}", "call-next"]
						},
						"description": "Call the next customer in queue (Merchant only)"
					},
					"response": []
				},
				{
					"name": "Mark Queue as Finished",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/queues/{{queueId}}/finish",
							"host": ["{{baseUrl}}"],
							"path": ["queues", "{{queueId}}", "finish"]
						},
						"description": "Mark queue entry as finished (Merchant only)"
					},
					"response": []
				}
			]
		}
	]
}

