						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/queues/establishment/{{establishmentId}}",
							"host": ["{{baseUrl}}"],
							"path": ["queues", "establishment", "{{establishmentId}}"]
						},
						"description": "Get all customers waiting in an establishment's queue"
					},
					"response": []
				},
				{
